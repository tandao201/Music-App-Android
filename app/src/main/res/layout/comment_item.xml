<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCommentItem"
        android:backgroundTint="#882DF8"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="30dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewAccountImageComment"
            app:cardCornerRadius="20dp"
            android:background="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/imageAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textviewAccountName"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Ai do!"
            android:textSize="20sp"
            android:layout_marginLeft="120dp"
            android:maxWidth="200dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textviewContentOfComment"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:text="Ai do tinh noa chang troi ve dau, nhat nhoa ghe rat tinh sauf!"
            android:textSize="17sp"
            android:layout_marginLeft="120dp"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>