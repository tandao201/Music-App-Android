<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="4dp"
        android:id="@+id/imageItemSearchResult"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/textViewTenBaiHatResult"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_toRightOf="@id/imageItemSearchResult"
        android:maxWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/textViewTenCaSiResult"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:textColor="#595959"
        android:layout_toRightOf="@id/imageItemSearchResult"
        android:maxWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTenBaiHatResult"/>


</RelativeLayout>