<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">

    <RelativeLayout

        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/indexDsTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Anh rat yeu em"
            android:id="@+id/tenbaiHatTextview"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_toRightOf="@id/indexDsTextview"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Tien Minh"
            android:textSize="20sp"
            android:textColor="#979797"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/indexDsTextview"
            android:layout_below="@id/tenbaiHatTextview"
            android:id="@+id/tenCasiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/imageDownload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/luotThichDsQc"
            android:background="@null"
            android:src="@drawable/icon_download" />

        <ImageView
            android:id="@+id/luotThichDsQc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/iconlove" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>